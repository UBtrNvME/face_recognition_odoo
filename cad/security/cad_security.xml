<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="module_category_services_cad" model="ir.module.category">
        <field name="name">CAD Management</field>
        <field name="description">Helps you manage your cad records</field>
        <field name="sequence">3</field>
    </record>
    <record id="group_cad_user" model="res.groups">
        <field name="name">CAD User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
        <field name="category_id" ref="module_category_services_cad" />
    </record>
    <record id="group_cad_manager" model="res.groups">
        <field name="name">CAD Administrator</field>
        <field name="category_id" ref="module_category_services_cad" />
        <field name="implied_ids" eval="[(4, ref('group_cad_user'))]" />
        <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
    </record>
    <data noupdate="1">
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('cad.group_cad_manager'))]" />
        </record>
    </data>
</odoo>
