<odoo>
    <data>
        <record id="cad_symbol_view_form" model="ir.ui.view">
            <field name="name">cad.symbol.view.form</field>
            <field name="model">cad.symbol</field>
            <field name="arch" type="xml">
                <form string="Symbol">
                    <sheet>
                        <field name="active" invisible="1" />
                        <widget
                            name="web_ribbon"
                            title="Archived"
                            bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"
                        />
                        <div class="oe_button_box" name="button_box" invisible="1">
                            <button
                                name="open_calculate_threshold"
                                type="object"
                                icon="fa-calculator"
                                string="Calculate Threshold"
                            />
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" />
                            </h1>
                            <field name="preview" widget="image" />
                        </div>
                        <group>
                            <group string="Technical" name="technical">
                                <label for="width" string="Width" />
                                <field
                                    name="width"
                                    nolabel="1"
                                    class="oe_inline"
                                    readonly="1"
                                />
                                <label for="height" string="Height" />
                                <field
                                    name="height"
                                    nolabel="1"
                                    class="oe_inline"
                                    readonly="1"
                                />
                                <label for="template" string="Template" />
                                <field name="template" nolabel="1" class="oe_inline" />
                                <label for="origin" string="Origin" />
                                <field
                                    name="origin"
                                    nolabel="1"
                                    class="oe_inline"
                                    readonly="1"
                                />
                            </group>
                            <group string="Parser Attributes" name="parser_attributes">
                                <field name="threshold" />
                                <field name="mirror" />
                                <field name="connections" widget="field_connection" />
                                <field
                                    name="ignore_regions"
                                    widget="field_ignore_region"
                                />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_cad_symbol" model="ir.actions.act_window">
            <field name="name">Cad Symbols</field>
            <field name="res_model">cad.symbol</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Cad Symbol
                </p>
                <!--<p>
                                    Create a cad object template.
                                </p>-->
            </field>
        </record>
        <record id="action_cad_defaults" model="ir.actions.act_window">
            <field name="name">Cad Defaults</field>
            <field name="res_model">ir.config_parameter</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Cad Default
                </p>
                <!--<p>
                                    Create a cad object template.
                                </p>-->
            </field>
        </record>
        <menuitem id="menu_cad_automation" name="Cad" sequence="10" />
        <menuitem
            id="menu_cad_automation_cad_symbol"
            name="Cad Object Templates"
            parent="cad.menu_cad_automation"
            sequence="10"
            action="cad.action_cad_symbol"
        />
        <menuitem
            id="menu_cad_automation_cad_defaults"
            name="Cad Defaults"
            parent="cad.menu_cad_automation"
            sequence="10"
            action="cad.action_cad_defaults"
        />
    </data>
</odoo>
