<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="gpodem.project_region_tree">
            <field name="name">project.region.tree</field>
            <field name="model">project.region</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="gpodem.project_region_form" model="ir.ui.view">
            <field name="name">project.region.form</field>
            <field name="model">project.region</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Название" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Название"/>
                            </h1>
                        </div>
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="gpodem.action_project_region_list">
            <field name="name">Регион</field>
            <field name="res_model">project.region</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="gpodem.menu_region" name="Регионы" parent="project.menu_main_pm"
            action="gpodem.action_project_region_list" />
    </data>
</odoo>