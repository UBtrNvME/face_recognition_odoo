<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="frontend_projects">
            <h3>Список проектов</h3>
            <table>
                <thead>
                    <th>Название</th>
                    <th>Стадия</th>
                    <th>Менеджер</th>
                    <th>Создатель</th>
                    <th>Email создателя</th>
                    <th>Ответственная компания</th>
                    <th>Описание</th>
                </thead>
                <tbody>
                    <t t-foreach="projects" t-as="p">
                        <tr style="cursor: pointer" t-attf-onclick="window.location.href='/project/{{p.id}}'">
                            <td>
                                <span t-field="p.name"/>
                            </td>
                            <td>
                                <span t-field="p.stage_id"/>
                            </td>
                            <td>
                                <span t-field="p.manager_id"/>
                            </td>
                            <td>
                                <span t-field="p.partner_id"/>
                            </td>
                            <td>
                                <span t-field="p.creator_email"/>
                            </td>
                            <td>
                                <span t-field="p.company_id"/>
                            </td>
                            <td>
                                <span t-field="p.description"/>
                            </td>
                            <td>
                                <span t-field="p.editable_by_user"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </template>
        <template id="frontend_project">
            <h3>Проект
                <span t-esc="project.name"></span>
            </h3>
            <table>
                <tbody>
                    <tr>
                        <th>Название</th>
                        <td>
                            <span t-field="project.name"/>
                        </td>
                    </tr>
                    <tr>
                        <th>Стадия</th>
                        <td>
                            <span t-field="project.stage_id"/>
                        </td>
                    </tr>
                    <tr style="cursor: pointer" t-attf-onclick="window.location.href='/user/{{project.manager_id.id}}'">
                        <th>Менеджер</th>
                        <td>
                            <span t-field="project.manager_id"/>
                        </td>
                    </tr>
                    <tr style="cursor: pointer" t-attf-onclick="window.location.href='/user/{{project.partner_id.id}}'">
                        <th>Создатель</th>
                        <td>
                            <span t-field="project.partner_id"/>
                        </td>
                    </tr>
                    <tr>
                        <th>Email создателя</th>
                        <td>
                            <span t-field="project.creator_email"/>
                        </td>
                    </tr>
                    <tr>
                        <th>Ответственная компания</th>
                        <td>
                            <span t-field="project.company_id"/>
                        </td>
                    </tr>
                    <tr>
                        <th>Описание</th>
                        <td>
                            <span t-field="project.description"/>
                        </td>
                    </tr>
                    <tr>
                        <th>Внесение правок</th>
                        <td>
                            <span t-field="project.editable_by_user"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </template>
    </data>
</odoo>