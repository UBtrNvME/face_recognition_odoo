<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="priority" eval="1"/>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales_purchases']" position="after">
                    <page name="photos" string="Photos">
                        <field name="attachment_ids">
                            <kanban>
                                <field name="datas"/>
                                <field name="id"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div t-attf-class="oe_kanban_global_click">
                                            <div>
                                                <img class="mx-auto d-block" style="height: 200px; width: auto;"
                                                     t-att-src="kanban_image('ir.attachment','datas', record.id.raw_value)"/>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="compare_with_image" type="object" string=" Compare with image" class="oe_highlight"
                                icon="fa-camera"
                                confirm="You will have to load image to check if it is the same person"/>
                    </header>
                </xpath>
            </field>
        </record>

        <record id="res_partner_compare_form" model="ir.ui.view">
            <field name="name">res.partner.compare.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form create="false" edit="false">
                    <sheet>
                        <group>
                            <field name="id"/>
                            <field name="image"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>