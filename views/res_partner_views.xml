<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="priority" eval="1"/>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='hr_settings']" position="after">
                    <page name="photos" string="Photos">
                        <field name="attachment_ids"
                               context="{'default_res_id': active_id, 'default_res_model': 'hr.employee'}">
                            <kanban>
                                <field name="datas"/>
                                <field name="id"/>
                                <field name="res_id"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div t-attf-class="oe_kanban_global_click">
                                            <div>
                                                <img class="mx-auto d-block" style="height: 200px; width: auto;"
                                                     t-att-src="kanban_image('ir.attachment','datas', record.id.raw_value)"/>
                                                <button class="btn btn-primary btn-block mt-2"
                                                        name="set_avatar" type="object">
                                                    Set as avatar
                                                </button>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="compare_with_image" type="object" string=" Compare with image"
                                class="oe_highlight"
                                icon="fa-camera"
                                confirm="You will have to load image to check if it is the same person"/>
<!--                        <button name="camera_capture" type="object" string="Camera"/>-->
                    </header>
                </xpath>
            </field>
        </record>

        <record id="res_partner_compare_form" model="ir.ui.view">
            <field name="name">res.partner.compare.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form create="false" edit="false">
                    <sheet>
                        <group>
                            <field name="id"/>
                            <field name="image_512"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>