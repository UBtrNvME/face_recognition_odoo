<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="face_recognition_message_wizard" model="ir.ui.view">
            <field name="name">face.recognition.message.wizard</field>
            <field name="model">face.recognition.message.wizard</field>
            <field name="arch" type="xml">
                <form string="Message">
                    <field name="message" style="font-size: 20px; font-weight: bold;"/>
                    <br/>
                    <field name="image" widget="image"/>
                    <footer>
                        <button string="Close" class="oe_highlight" special="cancel"/>
                        <button string="Add to this person's photos" class="btn-primary" type="object" name="add_photo"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>