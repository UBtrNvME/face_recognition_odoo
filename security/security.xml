<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="gpodem_management">
            <field name="name">Система</field>
            <field name="description">Доступ к системе</field>
            <field name="sequence">-1</field>
        </record>

        <record id="group_user" model="res.groups">
            <field name="name">Пользователь системы</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="category_id" ref="gpodem.gpodem_management"/>
        </record>

        <record id="group_manager" model="res.groups">
            <field name="name">Менеджер системы</field>
            <field name="implied_ids" eval="[(4, ref('gpodem.group_user'))]"/>
            <field name="category_id" ref="gpodem.gpodem_management"/>
        </record>

        <record id="group_admin" model="res.groups">
            <field name="name">Администратор системы</field>
            <field name="implied_ids" eval="[(4, ref('gpodem.group_manager'))]"/>
            <field name="category_id" ref="gpodem.gpodem_management"/>
        </record>
    </data>
</odoo>