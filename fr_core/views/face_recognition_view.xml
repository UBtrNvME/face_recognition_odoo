<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="face_recognition_compare_form" model="ir.ui.view">
            <field name="name">face.recognition.compare.form</field>
            <field name="model">face.recognition</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="loaded_image" widget="image" filename="loaded_image_name"/>
                            <field name="loaded_image_name" invisible="1"/>
                            <field name="partner_id"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Compare" class="oe_highlight" name="compare" type="object"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
